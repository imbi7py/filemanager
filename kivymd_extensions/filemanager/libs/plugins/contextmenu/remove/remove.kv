#:import os os
#:import get_hex_from_color kivy.utils.get_hex_from_color


<DialogMoveToTrash>
    size_hint: None, None
    height: container.height
    width: Window.width * 40 / 100
    auto_dismiss: False

    MDBoxLayout:
        id: container
        spacing: "8dp"
        padding: "12dp", "12dp", "12dp", "8dp"
        orientation: "vertical"
        adaptive_height: True

        MDBoxLayout:
            adaptive_height: True

            MDIconButton:
                icon: "trash-can"
                pos_hint: {'center_y': .5}
                user_font_size: "48sp"
                disabled: True

            MDLabel:
                text:
                    f"[b]Remove " \
                    f"[color={get_hex_from_color(root.theme_cls.primary_color)}] " \
                    f"{os.path.split(root.instance_context_menu.entry_object.path)[1]}" \
                    f"[/color][/b]"
                font_style: "Subtitle1"
                pos_hint: {'center_y': .5}
                markup: True
                shorten: True

        MDSeparator:

        MDBoxLayout:
            adaptive_height: True
            spacing: "12dp"

            Widget:

            MDFlatButton:
                text: "CANCEL"
                on_release: root.dismiss()

            MDRaisedButton:
                text: "REMOVE"
                on_release:
                    os.remove(root.instance_context_menu.entry_object.path)
                    root.dismiss()
